@import 'stylus-setting'

.ant-radio-group
  background: #fff;

.ant-radio-button-wrapper
  &:hover
    color: theme-color-A

.ant-radio-button-wrapper-checked
  border-color: theme-color-B !important // 由于源样式使用了!important所以此处也必须使用
  background: theme-color-A
  color: #fff
  &:hover
    color: #fff

.ant-tabs.ant-tabs-card 
  >.ant-tabs-bar
    .ant-tabs-tab-active
      background: theme-color-A
      color: #fff

.ant-tabs-nav
  .ant-tabs-tab
    &:hover
      border-color: theme-color-A
      color: theme-color-A

.ant-badge
  margin-left: 4px;
  margin-top: -16px;

.ant-btn.ant-dropdown-trigger
  background: transparent
  color: inherit
  height 100%;
  &:hover
    border-color: theme-color-A
    color: theme-color-A
  &:focus
    @extend .ant-btn.ant-dropdown-trigger
    border-color: theme-color-A

.ant-btn-primary
  background: transparent

.ant-confirm-btns
  .ant-btn.ant-btn-Default
    background: button-blue-A
    border-color: button-blue-B
    color: #fff;
    &:hover
      background: button-blue-A
      border-color: button-blue-B
    &:active
      background: button-blue-B
    &:focus
      border-color: button-blue-B
      color: #fff
  .ant-btn
    &:hover
      background: #b10
      border-color: #a10
      color: #fff
    &:active
      background: #b00
      border-color: #a10
      color: #fff
    &:focus
      border-color: inherit
      color: #fff
